<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="7"
    android:columnCount="5"
    android:paddingTop="34dp"
    android:layout_gravity="fill">

    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:gravity="end"
        android:inputType="none"
        android:textSize="45dp"
        android:padding="16dp"
        android:background="@android:color/transparent" />

    <EditText
        android:id="@+id/display2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:gravity="end"
        android:inputType="none"
        android:textSize="24sp"
        android:padding="16dp"
        android:background="@android:color/transparent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_sin"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="sin"
        android:textSize="21sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cos"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="cos"
        android:textSize="21sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_tan"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="tan"
        android:textSize="21sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_ln"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="ln"
        android:textSize="21sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_log"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="log"
        android:textSize="21sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_exclamacao"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="!"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_pi"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="Ï€"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_e"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="e"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_parent1"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text="("
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_parent2"
        android:background="@color/green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_columnWeight="1"
        android:text=")"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_7"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_8"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_9"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_divide"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_del"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="DEL"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_4"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_5"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_6"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_multiply"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_vazio"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:clickable="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_1"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_2"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_3"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_subtract"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_vazio2"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:clickable="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dot"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="."
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_0"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_clear"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_equals"
        android:background="@color/cinza_claro"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:text="="
        android:textColor="@color/white"
        android:textSize="24sp"/>

</GridLayout>
